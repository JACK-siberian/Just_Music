<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorMyTheme</item>
        <item name="android:cacheColorHint">#fff</item>
    </style>


    <style name="MyStringStyle" >
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FastScrollTheme">
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
    </style>

</resources>
